<h1>Eat the Burger!</h1>

<div class="grid-container">
    <div class="grid-item">
        <h2>Order's Up!</h2>
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burger-block devour=true}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="grid-item">
        <h2>Devoured Burgers. Yum!</h2>
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{> burger-block devour=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>

<div class="grid-item">
<form id="makeBurger">
    <h2>Enter a burger you'd like to eat.</h2>
    <label for="bur">Burger Name:</label>
    <textarea type="text" name="burger" id="bur"></textarea>
    <button class="submit" type="submit">Submit</button>
</form>
</div>

<div class="grid-item">
<img src="assets/images/burger.jpg" alt="hamburger">
</div>

</div>
